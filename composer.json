{
    "name": "amber/phraser",
    "description": "Wrapper class for working with strings.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi PeÃ±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amber\\Phraser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "amber/collection": "^0.2.5@beta"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "dev-master",
        "phpunit/phpunit": "^6.5|^7.0",
        "squizlabs/php_codesniffer": "^3.3",
        "lavoiesl/php-benchmark": "^1.4"
    },
    "scripts": {
        "test": "phpunit",
        "docs": "phpdoc",
        "sniff": "phpcs --standard=PSR12 ./src",
        "fix-cs": "phpcbf --standard=PSR12 ./src",
        "speed": "php ./tests/Benchmark.php"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    }
}
