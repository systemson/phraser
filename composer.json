{
    "name": "amber/phraser",
    "description": "Wrapper class for working with strings.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi PeÃ±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amber\\Phraser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.2.0",
        "amber/collection": "0.6.*",
        "amber/common": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "test": "phpunit",
        "docs": "php sami.phar update samiConfig.php -v",
        "sniff": "phpcs --standard=PSR12 ./src",
        "fix-cs": "phpcbf --standard=PSR12 ./src",
        "type-hint": "psalm --show-info=false",
        "pull": [
            "git pull",
            "composer update -vvv"
        ],
        "full-check": [
            "@test",
            "@docs",
            "@sniff"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
